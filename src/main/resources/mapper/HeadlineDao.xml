<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wjj.campus.mapper.HeadlineMapper">
    <select id="queryHeadlineList" resultType="com.wjj.campus.entity.Headline">
        select id,
        name,
        linked,
        uuid,
        priority,
        status,
        last_edit_time
        from headline
        <if test="status != null">
            where status = #{status}
        </if>
        order by priority asc
        <if test="number != null">
            limit #{number}
        </if>
    </select>
    <select id="queryHeadlineImageByUUID" resultType="com.wjj.campus.entity.Headline">
        select picture
        from headline
        where uuid = #{uuid}
    </select>
</mapper>